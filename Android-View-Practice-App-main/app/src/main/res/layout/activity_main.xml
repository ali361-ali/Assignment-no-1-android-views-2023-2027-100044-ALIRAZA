<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background_gradient"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_title"
            android:textSize="32sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:letterSpacing="0.05"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="true">

            <!-- Row 1 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTextView"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="@string/btn_textview"
                android:textColor="@color/white"
                android:background="#1AFFFFFF"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconGravity="top"
                app:iconTint="@color/white"
                android:padding="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditText"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="@string/btn_edittext"
                android:textColor="@color/white"
                android:background="#1AFFFFFF"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_send"
                app:iconGravity="top"
                app:iconTint="@color/white"
                android:padding="12dp" />

            <!-- Row 2 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="@string/btn_button"
                android:textColor="@color/white"
                android:background="#1AFFFFFF"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_add"
                app:iconGravity="top"
                app:iconTint="@color/white"
                android:padding="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnImageView"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="@string/btn_imageview"
                android:textColor="@color/white"
                android:background="#1AFFFFFF"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_gallery"
                app:iconGravity="top"
                app:iconTint="@color/white"
                android:padding="12dp" />

            <!-- Row 3 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCheckBox"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="@string/btn_checkbox"
                android:textColor="@color/white"
                android:background="#1AFFFFFF"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/checkbox_on_background"
                app:iconGravity="top"
                app:iconTint="@color/white"
                android:padding="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRadioButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="@string/btn_radiobutton"
                android:textColor="@color/white"
                android:background="#1AFFFFFF"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_agenda"
                app:iconGravity="top"
                app:iconTint="@color/white"
                android:padding="12dp" />

            <!-- Row 4 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSwitch"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="@string/btn_switch"
                android:textColor="@color/white"
                android:background="#1AFFFFFF"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_manage"
                app:iconGravity="top"
                app:iconTint="@color/white"
                android:padding="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnToggleButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="@string/btn_togglebutton"
                android:textColor="@color/white"
                android:background="#1AFFFFFF"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_media_play"
                app:iconGravity="top"
                app:iconTint="@color/white"
                android:padding="12dp" />

            <!-- Row 5 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSpinner"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="@string/btn_spinner"
                android:textColor="@color/white"
                android:background="#1AFFFFFF"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/arrow_down_float"
                app:iconGravity="top"
                app:iconTint="@color/white"
                android:padding="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnListView"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="@string/btn_listview"
                android:textColor="@color/white"
                android:background="#1AFFFFFF"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_sort_by_size"
                app:iconGravity="top"
                app:iconTint="@color/white"
                android:padding="12dp" />

            <!-- Row 6 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRecyclerView"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="@string/btn_recyclerview"
                android:textColor="@color/white"
                android:background="#1AFFFFFF"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_view"
                app:iconGravity="top"
                app:iconTint="@color/white"
                android:padding="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGridView"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="@string/btn_gridview"
                android:textColor="@color/white"
                android:background="#1AFFFFFF"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_sort_alphabetically"
                app:iconGravity="top"
                app:iconTint="@color/white"
                android:padding="12dp" />

            <!-- Row 7 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnProgressBar"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="@string/btn_progressbar"
                android:textColor="@color/white"
                android:background="#1AFFFFFF"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/stat_sys_download"
                app:iconGravity="top"
                app:iconTint="@color/white"
                android:padding="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSeekBar"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="@string/btn_seekbar"
                android:textColor="@color/white"
                android:background="#1AFFFFFF"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/btn_star"
                app:iconGravity="top"
                app:iconTint="@color/white"
                android:padding="12dp" />

            <!-- Row 8 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRatingBar"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="@string/btn_ratingbar"
                android:textColor="@color/white"
                android:background="#1AFFFFFF"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/star_on"
                app:iconGravity="top"
                app:iconTint="@color/white"
                android:padding="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLinearLayout"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="@string/btn_linearlayout"
                android:textColor="@color/white"
                android:background="#1AFFFFFF"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_preferences"
                app:iconGravity="top"
                app:iconTint="@color/white"
                android:padding="12dp" />

            <!-- Row 9 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRelativeLayout"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="@string/btn_relativelayout"
                android:textColor="@color/white"
                android:background="#1AFFFFFF"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_set_as"
                app:iconGravity="top"
                app:iconTint="@color/white"
                android:padding="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConstraintLayout"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="@string/btn_constraintlayout"
                android:textColor="@color/white"
                android:background="#1AFFFFFF"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_zoom"
                app:iconGravity="top"
                app:iconTint="@color/white"
                android:padding="12dp" />

            <!-- Row 10 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFrameLayout"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="@string/btn_framelayout"
                android:textColor="@color/white"
                android:background="#1AFFFFFF"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_crop"
                app:iconGravity="top"
                app:iconTint="@color/white"
                android:padding="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnScrollView"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_columnWeight="1"
                android:text="@string/btn_scrollview"
                android:textColor="@color/white"
                android:background="#1AFFFFFF"
                app:cornerRadius="16dp"
                app:icon="@android:drawable/ic_menu_recent_history"
                app:iconGravity="top"
                app:iconTint="@color/white"
                android:padding="12dp" />

        </GridLayout>

    </LinearLayout>
</ScrollView>
